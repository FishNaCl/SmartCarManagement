<!--pages/school/express/express-main.wxml-->
<view class="flex solid-bottom padding justify-around bg-white">
	<view class="bg-gradual-blue padding radius text-center shadow-blur margin-xs top-btn" bindtap="onSendExpressBtnClick">
		<view class="cuIcon-deliver"></view>
		<view class="text-white text-bold">寄快递</view>
	</view>
	<view class="bg-gradual-blue padding radius text-center shadow-blur margin-xs top-btn" bindtap="onExpressReceiveBtnClick">
		<view class="cuIcon-down"></view>
		<view class="text-white text-bold">收快递</view>
	</view>
</view>

<view class='cu-bar solid-bottom bg-white'>
	<view class='action'>
		<text class='cuIcon-title text-blue'></text>我的快递
	</view>
</view>

<view class="cu-card article no-card" bindtap="onCardClick">
	<view class="cu-item shadow">
		<view class="content">
			<image src="./image/express-1.jpg" mode="aspectFill"></image>
			<view class="desc">
      <view class="text-bold">已送达</view>
				<view class="text-content">请到宿舍楼下小车中领取快递, 感谢您的支持</view>
				<view>
					<view class="cu-tag bg-green light sm round">已送达</view>
				</view>
			</view>
		</view>
	</view>
</view>

<view class="cu-card article no-card" bindtap="onCardClick">
	<view class="cu-item shadow">
		<view class="content">
			<image src="./image/express-2.jpg" mode="aspectFill"></image>
			<view class="desc">
      <view class="text-bold">运输中</view>
				<view class="text-content">点击卡片查看路线详情</view>
				<view>
					<view class="cu-tag bg-red light sm round">运输中</view>
				</view>
			</view>
		</view>
	</view>
</view>

<view class="cu-card article no-card" bindtap="onCardClick">
	<view class="cu-item shadow">
		<view class="content">
			<image src="./image/express-3.jpg" mode="aspectFill"></image>
			<view class="desc">
      <view class="text-bold">已签收</view>
				<view class="text-content">XX快递: [昆明市]快件已经在昆明理工大学新迎校区菜鸟驿站签收</view>
				<view>
					<view class="cu-tag bg-green light sm round">已签收</view>
				</view>
			</view>
		</view>
	</view>
</view>